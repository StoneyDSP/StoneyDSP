{
  "name": "@stoneydsp/stoneydsp",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/StoneyDSP/StoneyDSP",
  "author": "StoneyDSP <nathanjhood@googlemail.com>",
  "license": "MIT",
  "scripts": {
    "configure":    "cmake -S . -B         ./build -DStoneyDSP_IS_INSTALLABLE:BOOL=TRUE -DBUILD_TESTS:BOOL=TRUE -DCMAKE_INSTALL_PREFIX:PATH=./install",
    "reconfigure":  "cmake --fresh -S . -B ./build -DStoneyDSP_IS_INSTALLABLE:BOOL=TRUE -DBUILD_TESTS:BOOL=TRUE -DCMAKE_INSTALL_PREFIX:PATH=./install",
    "build":        "cmake --build         ./build",
    "postbuild":    "cmake --install       ./build",
    "ctest":        "ctest --test-dir      ./build --rerun-failed --output-on-failure --verbose",
    "cpack":        "cpack --config        ./build/CPackSourceConfig.cmake -B ./install",
    "cdist":        "cpack --config        ./build/CPackConfig.cmake       -B ./install"
  },
  "dependencies": {
    "clang-format": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.14",
    "typescript": "^5.3.3"
  }
}
